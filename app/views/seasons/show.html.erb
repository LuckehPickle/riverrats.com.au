<%- content_for :title, t('seasons.show.title') % { season: @season.name } %>
<%- content_for :description, t('seasons.show.description') % { season: @season.name } %>
<%- content_for :canonical_url, seasons_url %>

<div class="wrapper split-header">
  <span class="subheading">Leaderboard</span>
  <h1><%= t('seasons.show.title') % { season: @season.name } %></h1>
</div>

<div class="wrapper split-wrapper">
  <div>
    <%- players = @season.paginated_players(params[:page]) %>
    <div class="model-list">
      <table>
        <%= render collection: players, partial: 'application/standard_player' %>
      </table>
    </div>

    <div class="model-list-footer">
      <%= paginate players %>
    </div>
  </div>

  <div class="season-data">
    <ul>

      <!-- Duration -->
      <li>
        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="24px"
             height="24px" viewBox="0 0 24 24" enable-background="new 0 0 24 24" xml:space="preserve" class="material-icons">
          <path d="M19,4h-1V3c0-0.55-0.45-1-1-1s-1,0.45-1,1v1H8V3c0-0.55-0.45-1-1-1S6,2.45,6,3v1H5C3.89,4,3.01,4.9,3.01,6L3,20
		c0,1.1,0.89,2,2,2h14c1.1,0,2-0.9,2-2V6C21,4.9,20.1,4,19,4z M19,19c0,0.55-0.45,1-1,1H6c-0.55,0-1-0.45-1-1V9h14V19z"></path>
          <rect x="7" y="11" width="2" height="2"></rect>
          <rect x="11" y="11" width="2" height="2"></rect>
          <rect x="15" y="11" width="2" height="2"></rect>
        </svg>
        <span><%= @season.start_at.strftime '%B' %> - <%= @season.end_at.strftime '%B' %></span>
      </li>

    </ul>
  </div>
</div>