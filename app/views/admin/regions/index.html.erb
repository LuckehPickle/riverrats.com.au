<% content_for :title, 'All Regions (Admin)' %>

<div class="admin-body">

    <% if @regions.empty? %>
        <%= render partial: 'admin/empty-state', locals: { noun: 'regions', link: new_admin_region_path } %>
    <%  else  %>
        <div class="table-wrapper">
            <table>
                <tr>
                    <th>Name</th>
                </tr>
                <%=  render @regions  %>
            </table>
        </div>
    <%  end %>

    <div class="footer">
        <%= paginate @regions %>
        <p><%= page_entries_info @regions %></p>
    </div>

</div>