<% content_for :title, t('admin.articles.index.title') -%>

<div class="heading-and-button">
  <div>
    <span class="subheading">Admin Tools</span>
    <h1><%= t('admin.articles.index.title') %></h1>
  </div>

  <div>
    <%= link_to new_admin_article_path, class: 'button' do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="material-icons"><path d="M17.75 7L14 3.25 4.15 13.1c-.1.1-.15.22-.15.36v3.04c0 .28.22.5.5.5h3.04c.13 0 .26-.05.35-.15L17.75 7zm2.96-2.96c.39-.39.39-1.02 0-1.41L18.37.29c-.39-.39-1.02-.39-1.41 0L15 2.25 18.75 6l1.96-1.96z"/><path fill-opacity=".36" d="M2 20h20c1.1 0 2 .9 2 2s-.9 2-2 2H2c-1.1 0-2-.9-2-2s.9-2 2-2z"></path></svg>
      <span><%= t('admin.articles.new.title') %></span>
    <% end -%>
  </div>
</div>

<div class="breakdown">
  <!-- Article count -->
  <div>
    <h2>Published Articles</h2>
    <p><%= number_format Article.where(public: true).count %></p>
  </div>
</div>

<div class="articles-list model-list">
  <table>
    <%= render @articles %>
  </table>
</div>

<div class="model-list-footer">
  <%= paginate @articles %>
  <p><%= page_entries_info @articles %></p>
</div>
