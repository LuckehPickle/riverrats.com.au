<%= form_for [:admin, @event] do |f| %>

    <%= render partial: 'application/form-errors', locals: { object: @event } %>

    <div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title, autofocus: true %>
    </div>

    <div class="field">
        <%= f.label :start_at %><br />
        <%= f.datetime_select :start_at %>
    </div>

    <div class="field">
        <%= f.label :venue_id %><br />
        <%= f.collection_select :venue_id, Venue.all, :id, :name %>
    </div>

    <div class="field">
        <br />
        <%= f.submit %> |
        <%= link_to 'Cancel', admin_events_path %>
    </div>

<% end %>