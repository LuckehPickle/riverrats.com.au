<%- content_for :title, "Edit @#{@player.username} (Admin)" %>

<div class="column-wrapper small-first">

  <!-- Navigation -->
  <div class="thin">
    <%= render 'admin/navigation' %>
  </div>

  <div class="wide">

    <!-- Header -->
    <div class="wrapper-header admin">
      <div>
        <h1 class="has-subtitle">Edit @<%= @player.username %></h1>
        <p class="subtitle">Update this player. Be careful, this can be dangerous!</p>
      </div>
    </div>

    <!-- Form -->
    <div class="background">
      <h2>Form</h2>
      <%= render 'form' %>
    </div>

    <!-- Danger zone -->
    <div class="background danger-zone">

      <h2><i class="material-icons">&#xE002;</i> Delete player</h2>
      <p><strong>Permanently</strong> delete @<%= @player.username %> from the database. You will not be able to recover
        this account, and the user will no longer be able to login.</p>

      <div class="buttons">
        <%= link_to admin_player_path(@player), method: :delete, class: 'button danger', data: { confirm: t('player.confirm_delete') } do %>
          Delete @<%= @player.username %>
        <% end %>
      </div>

    </div>

  </div>

</div>