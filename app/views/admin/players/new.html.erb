<h1>New Player</h1>
<p>Create a new player</p>

<%= form_for @player, url: { action: 'create' } do |f| %>

    <%= render partial: 'application/form-errors', locals: { object: @player } %>

    <div class="field">
        <%= f.label :first_name %><br/>
        <%= f.text_field :first_name, autofocus: true, spellcheck: false %>
    </div>

    <div class="field">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, spellcheck: false %>
    </div>

    <div class="field">
        <%= f.label :email %><br/>
        <%= f.email_field :email %>
    </div>

    <div class="actions">
        <br />
        <%= f.submit 'Create new player' %> |
        <%= link_to 'Cancel', admin_players_path %>
    </div>

<% end %>
