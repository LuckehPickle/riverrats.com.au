<%= form_with model: [:admin, @player], local: true do |form| %>

  <%= render partial: 'application/form_errors', locals: { object: @player } %>

  <!-- Username -->
  <%- if @player.persisted? %>
    <div class="field">
      <%= form.label :username, for: 'player_username' %><br/>
      <%= form.text_field :username, id: 'player_username', spellcheck: false %>
    </div>
  <%- end %>

  <!-- Full name -->
  <div class="fields">

    <!-- First name -->
    <div class="field">
      <%= form.label :first_name, for: 'player_first_name' %><br/>
      <%= form.text_field :first_name, id: 'player_first_name', autofocus: true, spellcheck: false, placeholder: 'Given name...' %>
    </div>

    <!-- Last name -->
    <div class="field">
      <%= form.label :last_name, for: 'player_last_name' %><br/>
      <%= form.text_field :last_name, id: 'player_last_name', spellcheck: false, placeholder: 'Surname, family name...' %>
    </div>

  </div>

  <!-- Email address -->
  <div class="field">
    <%= form.label :email, for: 'player_email' %> (Optional)<br/>
    <div class="input-wrapper">
      <i class="material-icons">&#xE0BE;</i>
      <%= form.email_field :email, id: 'player_email', placeholder: 'someone@example.com' %>
    </div>
  </div>

  <div class="field">
    <div class="checkbox">
      <%= form.check_box :is_admin, id: 'player_is_admin' %>
      <%= form.label :is_admin, 'Administrative privileges', for: 'player_is_admin' %>
    </div>
  </div>

  <div class="actions buttons">
    <%= form.submit class: 'button wide' %>
    <%#= link_to 'Cancel', admin_players_path, class: 'button-tertiary' %>
  </div>

<% end %>