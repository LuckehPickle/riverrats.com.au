<div class="footer">

  <div class="footer-buttons">
    <div class="wrapper">
      <%- if player_signed_in? %>

        <!-- Profile -->
        <%= link_to player_path(current_player), class: 'button' do %>
          <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="24px"
               height="24px" viewBox="0 0 24 24" enable-background="new 0 0 24 24" xml:space="preserve" class="material-icons" style="margin-left: -3px">
            <path d="M3,5v14c0,1.1,0.89,2,2,2h14c1.1,0,2-0.9,2-2V5c0-1.1-0.9-2-2-2H5C3.89,3,3,3.9,3,5z M15,9c0,1.66-1.34,3-3,3s-3-1.34-3-3
		s1.34-3,3-3S15,7.34,15,9z M6,17c0-2,4-3.1,6-3.1s6,1.1,6,3.1v1H6V17z"></path>
          </svg>
          <span>View my profile</span>
        <% end %>

        <!-- Secure login -->
        <%= link_to players_random_path, class: 'button-secondary' do %>
          <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
               viewBox="0 0 24 24" enable-background="new 0 0 24 24" xml:space="preserve" class="material-icons" style="margin-left: -4px;">
            <path d="M19,3H5C3.9,3,3,3.9,3,5v14c0,1.1,0.9,2,2,2h14c1.1,0,2-0.9,2-2V5C21,3.9,20.1,3,19,3z M7.5,18C6.67,18,6,17.33,6,16.5
		S6.67,15,7.5,15S9,15.67,9,16.5S8.33,18,7.5,18z M7.5,9C6.67,9,6,8.33,6,7.5S6.67,6,7.5,6S9,6.67,9,7.5S8.33,9,7.5,9z M12,13.5
		c-0.83,0-1.5-0.67-1.5-1.5s0.67-1.5,1.5-1.5s1.5,0.67,1.5,1.5S12.83,13.5,12,13.5z M16.5,18c-0.83,0-1.5-0.67-1.5-1.5
		s0.67-1.5,1.5-1.5s1.5,0.67,1.5,1.5S17.33,18,16.5,18z M16.5,9C15.67,9,15,8.33,15,7.5S15.67,6,16.5,6S18,6.67,18,7.5
		S17.33,9,16.5,9z"></path>
          </svg>
          <span>Random profile</span>
        <% end %>

      <%- else %>

        <!-- Join -->
        <%= link_to new_player_registration_path, class: 'button', remote: true, data: { expects_modal: true, disable: true } do %>
          <span>Create an account</span>
        <% end %>

        <!-- Secure login -->
        <%= link_to new_player_session_path, class: 'button-secondary', remote: true, data: { expects_modal: true, disable: true } do %>
          <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="24px"
               height="24px" viewBox="0 0 24 24" enable-background="new 0 0 24 24" xml:space="preserve" class="material-icons" style="margin-left: -4px;">
            <path d="M18,8h-1V6c0-2.76-2.24-5-5-5S7,3.24,7,6v2H6c-1.1,0-2,0.9-2,2v10c0,1.1,0.9,2,2,2h12c1.1,0,2-0.9,2-2V10
		C20,8.9,19.1,8,18,8z M12,17c-1.1,0-2-0.9-2-2c0-1.1,0.9-2,2-2c1.1,0,2,0.9,2,2C14,16.1,13.1,17,12,17z M9,8V6c0-1.66,1.34-3,3-3
		s3,1.34,3,3v2H9z"></path>
          </svg>
          <span>Secure login</span>
        <% end %>

      <%- end %>
    </div>
  </div>

  <div class="wrapper">

    <div class="nav-columns">
      <ul class="column">
        <li class="title">River Rats</li>
        <li><%= link_to 'All Time Leaderboard', players_path %></li>
        <li><%= link_to 'Seasonal Leaderboard', seasons_path %></li>
        <li><%= link_to 'Game history', games_path %></li>
        <li><%= link_to 'Event calendar', events_path %></li>
        <li><%= link_to 'Release notes', release_notes_path %></li>
      </ul>
      <ul class="column">
        <li class="title">Account</li>
        <%- if player_signed_in? %>
          <li><%= link_to 'View my profile', player_path(current_player) %></li>
          <li><%= link_to 'Settings', edit_player_registration_path, remote: true, data: { expects_modal: true, disable: true } %></li>
          <%- if current_player.is_admin %>
            <li><%= link_to 'Admin panel', admin_root_path %></li>
          <%- end %>
          <li><%= link_to 'Random profile', players_random_path %></li>
          <li><%= link_to 'Logout', destroy_player_session_path, method: :delete, data: { confirm: 'Are you sure you want to log out?' } %></li>
        <%- else %>
          <li><%= link_to 'Create an account', new_player_registration_path, remote: true, data: { expects_modal: true, disable: true } %></li>
          <li><%= link_to 'Secure login', new_player_session_path, remote: true, data: { expects_modal: true, disable: true } %></li>
          <li><%= link_to 'Forgot password', new_player_password_path, remote: true, data: { expects_modal: true, disable: true } %></li>
          <li><%= link_to 'Random profile', players_random_path %></li>
        <%- end %>
      </ul>
      <ul class="column">
        <li class="title">Legal</li>
        <li><%= link_to 'Privacy policy', privacy_policy_path %></li>
      </ul>
    </div>

  </div>

  <div class="footer-base">
    <div class="wrapper">
      <p>Designed &amp; developed by <%= link_to 'Sean Bailey', 'https://www.seanbailey.io', target: '_blank' %></p>
      <p class="version"><%= link_to t('version'), release_notes_path %></p>
      <p>River Rats Poker League &copy; <%= Date.today.year %></p>
    </div>
  </div>

</div>