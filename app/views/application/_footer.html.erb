<%= render 'application/footer-banner' %>

<div class="footer">

    <div class="wrapper">

        <div class="nav-columns">
            <ul class="column">
                <li class="title">River Rats</li>
                <li><%= link_to 'Leaderboards', root_path %></li>
                <li><%= link_to 'Event schedule', events_path %></li>
                <li><%= link_to 'Privacy policy', privacy_policy_path %></li>
            </ul>
            <ul class="column">
                <li class="title">Account</li>
                <%- if player_signed_in? %>
                    <li><%= link_to 'View my profile', player_path(current_player) %></li>
                    <li><%= link_to 'Preferences', root_path %></li>
                    <%- if current_player.is_admin %>
                        <li><%= link_to 'Admin panel', admin_root_path %></li>
                    <%- end %>
                    <li><%= link_to 'Random profile', players_random_path %></li>
                    <li><%= link_to 'Logout', destroy_player_session_path, method: :delete, data: {confirm: 'Are you sure you want to log out?'} %></li>
                <%- else %>
                    <li><%= link_to 'Create an account', new_player_registration_path %></li>
                    <li><%= link_to 'Secure login', new_player_session_path %></li>
                    <li><%= link_to 'Forgot password', new_player_password_path %></li>
                    <li><%= link_to 'Random profile', players_random_path %></li>
                <%- end %>
            </ul>
            <ul class="column">
                <li class="title">Social</li>
                <li>
                    <%= link_to 'https://www.facebook.com/river.rats.mnc/', class: 'social-button' do %>
                        <svg viewBox="0 0 128 128">
                            <path id="original-plain" class="cls-1" d="M116.42,5.07H11.58a6.5,6.5,0,0,0-6.5,6.5V116.42a6.5,6.5,0,0,0,6.5,6.5H68V77.29H52.66V59.5H68V46.38c0-15.22,9.3-23.51,22.88-23.51a126,126,0,0,1,13.72.7V39.48H95.21c-7.39,0-8.82,3.51-8.82,8.66V59.5H104l-2.29,17.79H86.39v45.64h30a6.51,6.51,0,0,0,6.5-6.5V11.58A6.5,6.5,0,0,0,116.42,5.07Z"></path>
                        </svg>
                        <span>river.rats.mnc</span>
                    <% end %>
                </li>
            </ul>
        </div>

        <p class="copyright">River Rats Poker League &copy; <%= Date.today.year %></p>
    </div>

</div>