<div class="header" id="header" data-turbolinks-permanent>

  <!-- Update Banner -->
  <div class="update-banner">
    <div class="wrapper">
      <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="24px"
           height="24px" viewBox="0 0 24 24" enable-background="new 0 0 24 24" xml:space="preserve">
        <path d="M20,2H4C2.9,2,2,2.9,2,4v18l4-4h14c1.1,0,2-0.9,2-2V4C22,2.9,21.1,2,20,2z M12,11L12,11c-0.55,0-1-0.45-1-1V6
		c0-0.55,0.45-1,1-1h0c0.55,0,1,0.45,1,1v4C13,10.55,12.55,11,12,11z M13,15h-2v-2h2V15z"></path>
      </svg>
      <p>The Foundation Update is here! <%= link_to 'Click here to learn what\'s new', '' %>.</p>
    </div>
  </div>

  <div class="wrapper">

    <!-- Logo -->
    <%= link_to root_path, class: 'logo' do %>
      <%= image_tag 'flat logo.svg' %>
    <% end %>

    <!-- Navigation -->
    <nav>
      <ul>
        <%= render 'application/header/news_dropdown' %>
        <%= render 'application/header/leaderboards_dropdown' %>
        <%= render 'application/header/venues_dropdown' %>

        <!-- Calendar -->
        <li>
          <%= link_to events_path, class: 'header-link' do %>
            <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="24px"
                 height="24px" viewBox="0 0 24 24" enable-background="new 0 0 24 24" xml:space="preserve" class="material-icons mobile-icon">
              <path d="M16,13h-3c-0.55,0-1,0.45-1,1v3c0,0.55,0.45,1,1,1h3c0.55,0,1-0.45,1-1v-3C17,13.45,16.55,13,16,13z M16,3v1H8V3
		c0-0.55-0.45-1-1-1h0C6.45,2,6,2.45,6,3v1H5C3.89,4,3.01,4.9,3.01,6L3,20c0,1.1,0.89,2,2,2h14c1.1,0,2-0.9,2-2V6c0-1.1-0.9-2-2-2
		h-1V3c0-0.55-0.45-1-1-1h0C16.45,2,16,2.45,16,3z M18,20H6c-0.55,0-1-0.45-1-1V9h14v10C19,19.55,18.55,20,18,20z"></path>
            </svg>
            <span>Event Calendar</span>
          <%- end %>
        </li>
      </ul>

      <!-- Account -->
      <div class="account">
        <%- if player_signed_in? %>
          <%= render 'application/header/account_dropdown' %>
          <%= render 'application/header/notifications_dropdown' %>
        <%- else %>
          <%= link_to 'Create an account', new_player_registration_path, class: 'register', remote: true, data: { expects_modal: true, disable: true } %>
          <%= link_to 'Secure login', new_player_session_path, class: 'login', remote: true, data: { expects_modal: true, disable: true } %>
        <%- end %>
      </div>
    </nav>

  </div>

  <div class="header-dropdown-overlay"></div>
</div>