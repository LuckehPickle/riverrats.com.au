<nav class="navigation">
    <div class="wrapper">

        <!-- Logo -->
        <%= link_to root_path, class: 'logo' do %>
            <%= image_tag 'logo-textless.svg' %>
        <% end %>

        <!-- Live player search -->
        <%= render_search players_path, 'Search players' %>

        <!-- Links -->
        <ul class="quick-links">
            <li><%= link_to 'Leaderboards', root_path %></li>
            <li><%= link_to 'Event schedule', events_path %></li>
        </ul>

        <!-- Account -->
        <%- if player_signed_in? %>
            <div class="account-wrapper">
                <p class="player-name"><%= current_player.full_name %></p>
                <i class="material-icons">&#xE5C5;</i>
            </div>
        <%- else %>
            <div class="buttons">
                <%= link_to 'Sign up', new_player_registration_path, class: 'button-secondary' %>
                <%= link_to 'Login', new_player_session_path, class: 'button-tertiary' %>
            </div>
        <%- end %>

    </div>
</nav>

<header class="header">

    <!-- Curved base -->
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 400" preserveAspectRatio="none" class="curve">
        <path d="M 0 401 L 400 401 L 400 0 Q 200 600 0 0 Z "/>
    </svg>

</header>