<%- content_for :title, @region.name %>

<div class="thin-hero">
    <div class="wrapper">
        <h1 class="has-subtitle"><%= @region.name %></h1>
        <p class="subtitle">Region containing <%= pluralize @region.venues.count, 'venue' %>.</p>
    </div>
</div>

<div class="column-wrapper">

    <div class="wide">

        <!-- Leaderboard -->
        <div class="background">
            <h2><i class="material-icons">&#xE242;</i>Leaderboard</h2>

            <%- if @players.empty? %>
                <%= render partial: 'application/empty-state', locals: { description: 'No one has played at this region yet.'} %>
            <%- else %>
                <div class="table-wrapper">
                    <table>
                        <tr>
                            <th></th>
                            <th class="stretch">Player</th>
                            <th class="numeric">Played</th>
                            <th class="numeric">Wins</th>
                            <th class="numeric">Score</th>
                        </tr>
                        <%= render collection: @players, partial: 'player' %>
                    </table>
                </div>
            <%- end %>

            <div class="background-footer">
                <%= paginate @players %>
                <p><%= page_entries_info @players %></p>
            </div>

        </div>

    </div>

    <div class="thin">

        <!-- Venues -->
        <div class="background">
            <h2><i class="material-icons">&#xE24B;</i>Breakdown</h2>

            <ul class="info">

                <!-- Players -->
                <li>
                    <i class="material-icons">person</i>
                    <%= pluralize @region.players.count, 'player' %>
                </li>

                <!-- Venues -->
                <li>
                    <i class="material-icons">store</i>
                    <%= pluralize @region.venues.count, 'venue' %>
                </li>

            </ul>

            <ul>
                <%= render collection: @region.venues, partial: 'venue' %>
            </ul>

            <div class="buttons">
                <!-- Print -->
                <%= link_to 'javascript:void(0)', class: 'button-secondary' do %>
                    <i class="material-icons">&#xE8AD;</i>
                    Print this page
                <% end %>
            </div>

        </div>

    </div>

</div>