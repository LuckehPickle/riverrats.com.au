<% comments = @game.comments.includes(:player).page(params[:comment_page]).per(10) %>
<h2><%= pluralize @game.comments.count, 'comment' %></h2>

<!-- Comments -->
<ul class="game-comments">
  <%= render comments %>
</ul>

<% if player_signed_in? -%>
  <%= render 'comments/form' %>
<% end -%>

<%= paginate comments, param_name: :comment_page %>
