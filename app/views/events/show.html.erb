<%- content_for :title, "#{@event.title}" %>

<div class="thin-hero">
    <div class="wrapper">
        <h1 class="has-subtitle">
            <%= @event.clean_title %>
            <%- unless @event.has_occurred? %>
                <span class="badge">upcoming</span>
            <%- end %>
        </h1>
        <p class="subtitle">An event hosted by the River Rats Poker League.</p>
    </div>
</div>

<div class="column-wrapper">

    <div class="wide">

        <div class="background">
            <h2>Description</h2>
            <p><%= @event.description.blank? ? 'This event has no description.' : @event.description %></p>
        </div>

    </div>

    <div class="thin">

        <!-- Breakdown -->
        <div class="background">
            <h2><i class="material-icons">&#xE24B;</i>Breakdown</h2>
            <ul class="info">

                <!-- Time -->
                <li>
                    <i class="material-icons">access_time</i>
                    <%= local_time @event.start_at, '%l:%M%P' %>
                </li>

                <!-- Date -->
                <li>
                    <i class="material-icons">event_note</i>
                    <%= local_date @event.start_at %>
                </li>

                <!-- Venue -->
                <li>
                    <i class="material-icons">&#xE8F9;</i>
                    <%= link_to @event.venue.name, venue_path(@event.venue) %>
                </li>

                <!-- Region -->
                <li>
                    <i class="material-icons">&#xE0C8;</i>
                    <%= link_to @event.venue.region.name, region_path(@event.venue.region) %>
                </li>

            </ul>
        </div>

    </div>

</div>