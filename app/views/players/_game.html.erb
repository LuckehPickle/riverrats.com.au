<tr>
    <td><%= (game['position'] + 1).ordinalize %></td>
    <td class="numeric"><%= link_to "##{game['id'].to_s.rjust(2, '0')}", game_path(game['id']) %></td>
    <td><%= local_time game['played_on'], '%B %e, %Y' %></td>
    <td><%= link_to Venue.find(game['venue_id']).name, venue_path(Venue.find(game['venue_id'])) %></td>
    <td class="numeric stretch"><%= number_with_delimiter game['score'] %></td>
</tr>