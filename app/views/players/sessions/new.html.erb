<% content_for :title, 'Secure Login' %>
<% content_for :description do %><%= t('description.players.sessions.new') %><% end %>

<div class="form-header">
    <h1 class="has-subtitle">Secure Login</h1>
    <p class="subtitle">Welcome back! Please enter your details.</p>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>

    <div class="field">
        <%= form.label :login, 'Email or username' %><br/>
        <%= form.text_field :login, autofocus: true %>
    </div>

    <div class="field">
        <%= form.label :password %><br/>
        <%= form.password_field :password, autocomplete: 'off' %>
    </div>

    <div class="field remember-and-forget">
        <div class="remember">
            <div class="checkbox">
                <%= form.check_box :remember_me %>
                <%= form.label :remember_me do %>
                    <i class="material-icons">&#xE835;</i>
                    <span>Remember me</span>
                <% end %>
            </div>
        </div>
        <%= link_to 'Forgot password?', new_password_path(resource_name) %>
    </div>

    <hr/>

    <div class="actions">
        <%= form.submit 'Sign in', class: 'button wide' %>
    </div>

    <div class="form-footer">
        <p>Don't have an account? <%= link_to 'Create one!', new_registration_path(resource_name) %></p>
    </div>

<% end %>