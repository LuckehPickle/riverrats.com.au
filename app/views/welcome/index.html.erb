<%- content_for :description, t('view.welcome.index.description') %>
<%- content_for :canonical_url, root_url %>

<div class="hero">

  <div class="wrapper">

    <h1><%= @season.name %></h1>
    <p class="subtitle">Join us from <%= local_date @season.start_at, '%A, %B %e' %>
      to <%= local_date @season.end_at, '%A, %B %e' %>.</p>

    <div class="buttons">

      <!-- Current leaderboard -->
      <%= link_to season_path(@season), class: 'button' do %>
        <i class="material-icons">format_list_numbered</i>
        <span>Season leaderboard</span>
      <% end %>

      <!-- Upcoming events -->
      <%= link_to events_path, class: 'button-secondary' do %>
        <i class="material-icons">event_note</i>
        <span>Upcoming events</span>
      <% end %>

    </div>

  </div>

</div>

<!-- Recent Games -->
<div class="recent-games">
  <div class="wrapper">

    <!-- Header -->
    <span class="subheading">Alphabet Soup</span>
    <h1>Recent Games</h1>

    <!-- Grid of recent games -->
    <div class="game-grid">
      <%= render collection: @recent_games, partial: 'game' %>
    </div>
  </div>
</div>
